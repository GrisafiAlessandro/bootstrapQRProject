CREATE TABLE `DB_Sistema`.`Documenti` ( `idDocument` TEXT NOT NULL , `Titolo` TEXT NULL DEFAULT NULL COMMENT 'Titolo del documento' , `idUtente` TEXT NOT NULL COMMENT 'Indice Utente' , `LuogoRilascio` TEXT NULL DEFAULT NULL COMMENT 'Luogo rilascio del documento' , `DataRilascio` DATE NULL DEFAULT CURRENT_TIMESTAMP COMMENT 'Data di rilascio del documento' , `imgLocation` TEXT NULL DEFAULT NULL COMMENT 'il PATH del file .png/.pdf del certificato' , `idCorso` TEXT NOT NULL COMMENT 'Chiave indice corso fatto dal utente' , `Descrizione` TEXT NULL DEFAULT NULL COMMENT 'Informazioni aggiuntivi' , `isCertificato` BOOLEAN NULL COMMENT 'bool di controllo del tipo del documento' , `isAttestato` BOOLEAN NULL COMMENT 'bool di controllo del tipo del documento' , `RisultatoAttestato` TEXT NULL DEFAULT NULL COMMENT 'Risultato conseguito nel attestato' , `ChiaveInterna` INT NULL AUTO_INCREMENT COMMENT 'Chiave di indicizzazione interna' , PRIMARY KEY (`ChiaveInterna`(105)), UNIQUE (`idDocument`(30))) ENGINE = InnoDB CHARACTER SET utf8 COLLATE utf8_unicode_ci COMMENT = 'Tabella dei documenti';

CREATE TABLE `DB_Sistema`.`Corsi` ( `idCorso` TEXT NOT NULL COMMENT 'Indice del corso' , `ChiaveInterna` BIGINT(105) NOT NULL COMMENT 'Chiave di indicizzazione del database' , `DurataCorso` TEXT NULL DEFAULT NULL , `idDocente` TEXT NOT NULL COMMENT 'Indice del docente del corso' , `ProgrammaCorso` TEXT NULL DEFAULT NULL , `UlterioriInfo` TEXT NULL DEFAULT NULL COMMENT 'Qualsiasi altra informazione sul corso' , PRIMARY KEY (`ChiaveInterna`(105)), UNIQUE `idCorso` (`idCorso`)) ENGINE = InnoDB CHARACTER SET utf8 COLLATE utf8_unicode_ci COMMENT = 'Tabella dei corsi';